.chat-side
  .side-header
    .chat-header-box
      %h2.chat-user-name
        = current_user.name
      .chat-edit
        = link_to new_group_path, class: "chat-edit_link" do
          = fa_icon 'edit', class: "user-edit_new-group"
        = link_to edit_user_path(current_user), class: "chat-edit_link" do
          = fa_icon 'cog', class: "user-edit_edit-user"
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
