.wrapper
  .chat-main
    .main-header
      .main-header_left-box
        .main-header_left-box_current-group
          = @group.name
        .main-header_left-box_member-list
          Members:
          - @group.users.each do |user|
            = user.name
      .main-header_edit-btn
        = link_to edit_group_path(current_user) do
          Edit
    .messages
      = render @messages
    .form
      = form_for [@group, @message], id: "new_message" do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'image', class: "icon"
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
